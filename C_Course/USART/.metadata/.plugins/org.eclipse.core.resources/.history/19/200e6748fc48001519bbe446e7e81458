/////////////////////////////////////////////////////////////////////////
///	\file main.c
///	\brief This is the main program code.
///
///	\section UartLayer Serial Layer
///
///	Author: Ronald Sousa (Opticalworm)
/////////////////////////////////////////////////////////////////////////
#include "common.h"
#include "MCU/LED.h"
#include "MCU/uart2.h"
#include "MCU/tick.h"

/////////////////////////////////////////////////////////////////////////
///	\brief the first user code function to be called after the ARM M0
///	has initial.
/////////////////////////////////////////////////////////////////////////
void main(void)
{
    uint8_t StringTemp[25];

    LED_Init();
    Tick_init();
    Uart2_Init(9600);

    Uart2_WriteString((uint8_t *)"Hello World!\r\n");


    for ( ;; )
    {
        LED_Toggle();

        Tick_DelayMs(1000); // delay 1s;

        snprintf(&StringTemp[0], 25, "Tick %d", Tick_GetTickMs());
        Uart2_WriteString(&StringTemp[0]);
    }
}
